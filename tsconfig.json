{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "moduleResolution": "node",
        "removeComments": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "outDir": "./dist",
        "lib": [
            "es2017",
            "esnext.asynciterable",
            "dom"
        ],
        "plugins": [
            {
                "name": "typescript-lit-html-plugin"
            }
        ]
    }
}
